	        System.out.println("----------------------UNLAWFUL PROGRAM OF ABSOLUTE MEANINGLESSNESS-------------------------");
	        int random = 1;
	        double multiplier = 1;
	        int counter = 0;
	        double total = 0;

	        for (int i = 0; i < 8; i++) {
	            counter++;
	            //byter rad
	            System.out.println("\r");
	            multiplier = 0;
	            //lägger till mellanslag
	            for (int k = 8; k > i; k--)
	                System.out.print("\t");
	//använder math.pow för att köra upphöjt
	            for (int l = 0; l < i; l++) {
	                total = Math.pow(3, multiplier);
	                int tmp = (int) total;
	                System.out.print(tmp+ "\t");
	                multiplier++;

	            }
	            // omvänder för funktionen för att räkna ner samtidigt spara jag högsta värdet som jag tar hit
	            for (int q = 0; q < counter; q++) {
	                total = Math.pow(-3, multiplier);
	                //använder if satsen för annars blev talet negativt och skrev ut en massa minus
	                if (total < 0)
	                    total *= -1;
	                int tmp = (int) total;

	                System.out.print(tmp+ "\t");
	                multiplier--;

	            }
	            // close enough lol, det är ett stort hål i pyramiden och ja fattar inte varöfr

	        }


