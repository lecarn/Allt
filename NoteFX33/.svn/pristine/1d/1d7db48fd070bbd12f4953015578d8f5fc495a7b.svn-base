.button > .label {
-fx-content-display: graphic-only;
}


.toolbarOpenButton, .toolbarSaveButton, .toolbarSaveAsButton {
/*-fx-graphic: url("/images/Open_file-24x24.png");*/

-fx-background-size: 16px;
-fx-background-repeat: no-repeat;
-fx-background-position: 50%;
-fx-content-display: graphic-only;
}
.toolbarOpenButton {
	-fx-background-image: url("/images/Open_file-24x24.png");
}
.toolbarSaveButton {
	-fx-background-image: url("/images/floppydisk-32.png");
}

.toolbarSaveAsButton {
	-fx-background-image: url("/images/save-as-42x42.png");
}
	

.button {
    -fx-background-color: transparent, transparent, transparent, transparent;
}

.button:hover{
    -fx-background-color: transparent, rgba(0,0,0,.1), rgba(0,0,0,.1), transparent;
}

.button:armed {
    -fx-background-color: transparent, rgba(0,0,0,.1), rgba(0,0,0,.1), rgba(0,0,0,.2);
}
